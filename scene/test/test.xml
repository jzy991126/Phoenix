<?xml version='1.0' encoding='utf-8'?>

<scene>
    <integrator type="pathmis">
        <float name="russian" value="0.95"/>
    </integrator>

<!--    <emitter type="env">-->
<!--        <string name="filepath" value="../../envmap/blue.exr"/>-->
<!--    </emitter>-->

    <emitter type="point">
        <point name="position" value="0,0,0"/>
        <color name="power" value="10,10,10"/>
    </emitter>

    <camera type="perspective">
        <float name="fov" value="60"/>
        <transform name="toWorld">
            <lookat target="0, 0, 0" origin="0, 15, 0" up="0, 0, 1"/>
        </transform>
        <filter type="gaussian"/>
        <integer name="height" value="1080"/>
        <integer name="width" value="1920"/>
    </camera>

    <sampler type="independent">
        <integer name="sampleCount" value="128"/>
    </sampler>

    <shape type="sphere">
        <point name="center" value="-3,0,0"/>
        <float name="radius" value="1"/>
        <bsdf type="diffuse"/>
    </shape>
    <shape type="sphere">
        <point name="center" value="3,0,0"/>
        <float name="radius" value="1"/>
        <bsdf type="dielectric"/>
    </shape>

</scene>
